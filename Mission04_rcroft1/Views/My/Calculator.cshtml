@{
    ViewData["headText"] = "Grade Calculator";
}

@model CalculatorModel

<!--form for the grade calculator-->

<br />
<br />

<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="assignments" /> <br />

    <label>Quizzes:</label>
    <input id="quizzes" asp-for="quizzes" /> <br />

    <label>Group Projects: </label>
    <input id="groupProjects" asp-for="groupProjects" /> <br />

    <label>Intex:</label>
    <input id="intex" asp-for="intex" /> <br />

    <label>Midterm:</label>
    <input id="midterm" asp-for="midterm" /> <br />

    <label>Final Exam:</label>
    <input id="final" asp-for="final" /> <br />

    <input id="btnSubmit" type="submit" value="Submit" />
    <br />
    <div asp-validation-summary="All"></div>

</form>

<!--calculator script-->

<script src="~/js/calc.js"></script>